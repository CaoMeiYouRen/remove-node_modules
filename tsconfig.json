{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "jsx": "preserve",
        "removeComments": true,
        "declaration": true,
        "noImplicitAny": false,
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "watch": false,
        "lib": [
            "esnext",
        ]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/node_modules/*"
    ]
}